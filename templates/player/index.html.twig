{% extends 'base.html.twig' %}

{% block title %}Player index{% endblock %}

{% block body %}
    {% include 'global/menu.html.twig' %}

    {{ include('player/_form.html.twig') }}

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td width="10%">{{ player.id }}</td>
                <td width="70%">{{ player.name }}</td>
                <td width="20%">
                    <div class="btn-group" role="group" aria-label="Player actions">
                        <a class="btn btn-primary" href="{{ path('player_edit', {'id': player.id}) }}">edit</a>
                        {% include 'player/_delete_form.html.twig' with { 'player': player } only %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">

    window.onload = function() {
     let input = document.getElementById("player_name").focus();
    }
    </script>

{% endblock %}